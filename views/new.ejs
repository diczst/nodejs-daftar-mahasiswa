      <!-- itemName akan dimasukkan ke req.body ditampilkan di console log saat form disubmit -->
            <input name="npm" type="text">
            <input name="itemName" type="text">
            <input type="submit" value="Tambahkan">
        </form>
      </div>
      <a href="/index" class="cancel-button"></span>Kembali</a>
    </div>
